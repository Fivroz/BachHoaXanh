@model BachHoaXanh.Models.KhachHang

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="rounded bg-white m-4" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
        <h2 class="m-2 text-center">Đăng ký tài khoản</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="m-2 w-25">
            @Html.LabelFor(model => model.HoTen, "Họ và Tên:", htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", Required = "required" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="m-2 w-25">
            @*1: Nam, 0: Nữ*@
            @Html.LabelFor(model => model.GioiTinh, "Giới tính:", htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-12 form-check">
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.GioiTinh, true) Nam
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.GioiTinh, false) Nữ
                </label>
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="m-2 w-25">
            @Html.LabelFor(model => model.SDT, "Số điện thoại:", htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", Required = "required" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="m-2 w-25">
            @Html.LabelFor(model => model.DiaChi, "Địa chỉ:", htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", Required = "required" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="m-2 w-25">
            @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-md" })
            <div class="col-md-12">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", Required = "required" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="m-2 w-25">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Đăng ký" class="btn" style="background: #018846 !important; color:#ffffff" />
            </div>
        </div>
    </div>
}


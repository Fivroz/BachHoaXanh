@model BachHoaXanh.Models.DonDatHang

@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "Cart", FormMethod.Post, new { id = "createOrderForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group m-2 text-center">
        @Html.LabelFor(model => model.DiaChiNhanHang, "Địa chỉ nhận hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChiNhanHang, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required" } })
            @Html.ValidationMessageFor(model => model.DiaChiNhanHang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group m-2 text-center">
        @Html.LabelFor(model => model.SDTNhanHang, "Số điện thoại nhận hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDTNhanHang, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required", type = "tel" } })
            @Html.ValidationMessageFor(model => model.SDTNhanHang, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group m-2 text-center">
            @Html.LabelFor(model => model.PhuongThucThanhToan, "Hãy chọn phương thức thanh toán", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PhuongThucThanhToan", null, htmlAttributes: new { @class = "form-control m-2 mx-auto" })
                @Html.ValidationMessageFor(model => model.PhuongThucThanhToan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10 text-center">
            <input type="submit" value="Xác nhận đặt hàng" style="background: #018846; color: white; border: none; width: 50%" class="btn btn-default" />
        </div>
    </div>
}


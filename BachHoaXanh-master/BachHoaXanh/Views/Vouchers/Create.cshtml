@model BachHoaXanh.Models.Voucher

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm("Create", "Vouchers", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })

        <div class="form-group text-center">
            @Html.LabelFor(model => model.GiaTri, "Trị giá voucher", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                <div class="input-group m-2 mx-auto">
                    @Html.TextBoxFor(model => model.GiaTri, new { @class = "form-control", type = "number", Required = "required" })
                    <div class="input-group-append">
                        <select class="form-control" name="GiaTriType">
                            <option value="sotien" selected>VNĐ</option>
                            <option value="phantram">%</option>
                        </select>
                    </div>

                </div>
                @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(model => model.NgayHetHan, "Ngày hết hạn", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                @Html.TextBoxFor(model => model.NgayHetHan, new { @class = "form-control m-2 mx-auto", type = "date", Required = "required" })
                @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Tạo mới" style="background: #018846; color: white; border: none; width: 50%" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

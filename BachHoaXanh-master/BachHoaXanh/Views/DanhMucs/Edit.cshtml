@model BachHoaXanh.Models.DanhMuc

@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDanhMuc)

        <div class="form-group text-center m-2">
            @Html.LabelFor(model => model.TenDanhMuc,"Tên danh mục",htmlAttributes: new { @class = "control-label col-md-2 m-1 text-center" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control", Required = "required" } })
                @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center m-2">
            @Html.LabelFor(model => model.MaLoaiDanhMuc, "Chọn danh mục thuộc Loại", htmlAttributes: new { @class = "control-label col-md-2 m-1 text-center" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiDanhMuc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoaiDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center mt-3">
            <div class="col-md-offset-2 col-md-10 text-center ">
                <input type="submit" value="Lưu lại" style="background: #018846;; width: 50%; color:white; border: none; width: 50% " class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

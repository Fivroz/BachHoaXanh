@model BachHoaXanh.Models.NhaCungCap

@{
    ViewBag.Title = "Create";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger list-unstyled" })

        <div class="form-group text-center">
            @Html.LabelFor(model => model.TenNhaCC, "Tên nhà cung cấp", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                @Html.EditorFor(model => model.TenNhaCC, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required" } })
                @Html.ValidationMessageFor(model => model.TenNhaCC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(model => model.SDT, "Số điện thoại nhà cung cấp", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            @Html.LabelFor(model => model.DiaChi, "Địa chỉ nhà cung cấp", htmlAttributes: new { @class = "control-label col-md-2 m-2 text-center" })
            <div class="col-md-10 mx-auto">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control m-2 mx-auto", Required = "required" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Tạo mới" style="background: #018846; color: white; border: none; width: 50%" class="btn btn-default" />
            </div>
        </div>
    </div>
}